<div class="contents row" >
  <% @tweets.each do |tweet| %>
    <div class="content_post">
        
      
      <%= simple_format(tweet.text) %>
      <span class="name">
        <%= link_to '詳細',"/tweets/#{tweet.id}",method: :get %>
      </span>
      
      <% if user_signed_in? && current_user.id == tweet.user_id %> 
      <div class="more">
             <div class="botan2"> <%= link_to 'arrange', "/tweets/#{tweet.id}/edit", method: :get %></div>
             <div class="botan1"> <%= link_to 'delete', "/tweets/#{tweet.id}", method: :delete %></div>
      </div>
      <% end %>
      
    </div>
  <% end %>
  <%= paginate(@tweets) %>
</div>

